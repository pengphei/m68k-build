<board>
  <properties>
    <description>
      Board:	Freescale MCF51JE128
CPU:	51je
    </description>
    <property name="system-clock">
      16742KHz
    </property>
    <property name="core">
      v1
    </property>
  </properties>
  <initialize>
    <!-- disable the watchdog timer in SOPT1 -->
    <write-memory address="0xffff9802" value="0x13" bits="8"/>
    <!-- MCGTRM: TRIM:0x80 -->
    <write-memory address="0xffff803a" value="0x80" bits="8"/>
    <!-- MCGSC: 0000000 FTRIM:0 -->
    <write-memory address="0xffff803b" value="0x00" bits="8"/>
    <!-- Wait for FLL to lock on frequency -->
    <delay time="300ms"/>
  </initialize>
  <memory-map>
    <memory-device address="0x00000000" size="64K" type="flash" device="cfm">
      <property name="ipsbar">
	0xffff8100
      </property>
      <description>
	64KBytes Flash Block 1
      </description>
    </memory-device>
    <memory-device address="0x00010000" size="64K" type="flash" device="cfm">
      <property name="ipsbar">
	0xffff8110
      </property>
      <description>
	64KBytes Flash Block 2
      </description>
    </memory-device>
    <memory-device address="0x00300000" size="8K" type="rom">
      <description>
	8KBytes Boot ROM
      </description>
    </memory-device>
    <memory-device address="0x00800000" size="32K" type="ram">
      <description>
	32KBytes Internal RAM
      </description>
    </memory-device>
  </memory-map>
