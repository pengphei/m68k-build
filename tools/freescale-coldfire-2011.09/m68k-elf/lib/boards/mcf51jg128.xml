<board>
  <properties>
    <description>
      Board:	Freescale MCF51JG128
CPU:	51jg
    </description>
    <property name="system-clock">
      16742KHz
    </property>
    <property name="core">
      v1
    </property>
  </properties>
  <initialize>
    <!-- disable the watchdog timer in SIM_SOPT1 -->
    <write-memory address="0xffff80c0" value="0x00" bits="8"/>
    <!-- MCG_C3: SCTRIM:0x40 -->
    <write-memory address="0xffff81e2" value="0x40" bits="8"/>
    <!-- MCG_C4: 0000000 SCFTRIM:0 -->
    <write-memory address="0xffff81e3" value="0x00" bits="8"/>
    <!-- Wait for FLL to lock on frequency -->
    <delay time="300ms"/>
  </initialize>
  <memory-map>
    <memory-device address="0x00000000" size="128K" type="flash" device="cfp">
      <property name="ftfl-base">
	0xffff8380
      </property>
      <description>
	128 KBytes Flash
      </description>
    </memory-device>
    <memory-device address="0x00200000" size="32K" type="flash" device="cfp">
      <property name="ftfl-base">
	0xffff8380
      </property>
      <description>
	32 KBytes FlexNVM
      </description>
    </memory-device>
    <memory-device address="0x00280000" size="2K" type="ram">
      <description>
	2 KBytes FlexRAM
      </description>
    </memory-device>
    <memory-device address="0x00800000" size="32K" type="ram">
      <description>
	32 KBytes Internal RAM
      </description>
    </memory-device>
  </memory-map>
</board>
